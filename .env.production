# Production Environment Variables
# Copy this file to .env for production deployment

# Database (Production PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/serenity_living"

# NextAuth Configuration
NEXTAUTH_URL="https://serenitylivingoflexington.com"
NEXTAUTH_SECRET="your-production-secret-key-here-make-it-very-long-and-secure"

# FastAPI Backend URL
NEXT_PUBLIC_API_URL="https://serenitylivingoflexington.com/api"

# JWT Secret for FastAPI
JWT_SECRET="your-production-jwt-secret-very-secure"

# Google OAuth (Production)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# Apple OAuth (Production)
APPLE_ID="your-production-apple-client-id"
APPLE_TEAM_ID="your-production-apple-team-id"
APPLE_PRIVATE_KEY="your-production-apple-private-key"
APPLE_KEY_ID="your-production-apple-key-id"

# Email Configuration (Production SMTP)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-production-email@serenitylivingoflexington.com"
EMAIL_SERVER_PASSWORD="your-production-app-password"
EMAIL_FROM="noreply@serenitylivingoflexington.com"

# Security Settings
NODE_ENV="production"
ENVIRONMENT="production"

# SSL Settings (uncomment for HTTPS)
# SSL_CERT_PATH="/etc/nginx/ssl/cert.pem"
# SSL_KEY_PATH="/etc/nginx/ssl/private.key"