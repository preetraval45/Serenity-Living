# Environment Variables for Development
# Copy this file to .env.local and fill in your values

# Database (for Docker setup)
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/serenity_living"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-make-it-long-and-random"

# FastAPI Backend URL
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Google OAuth (optional for social login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Apple OAuth (optional for social login)  
APPLE_ID="your-apple-client-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_PRIVATE_KEY="your-apple-private-key"
APPLE_KEY_ID="your-apple-key-id"

# Email Configuration (for password reset)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@serenitylivingoflexington.com"